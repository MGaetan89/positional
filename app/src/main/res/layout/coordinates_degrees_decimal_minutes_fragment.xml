<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LocationCoordinatesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/latitudeTextView"
        style="@style/LocationCoordinate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center_horizontal"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/longitudeTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+100.00000" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/longitudeTextView"
        style="@style/LocationCoordinate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal|top"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:custom_color="@color/loaderViewShimmer"
        app:layout_constraintBottom_toTopOf="@id/formatLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/latitudeTextView"
        tools:text="+100.00000" />

    <TextView
        android:id="@+id/formatLabelTextView"
        style="@style/TextAppearance.Positional.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_coordinate_format_label_degrees_decimal_minutes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>