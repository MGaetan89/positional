<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/coordinatesCopyTitleTextView"
        style="@style/TextAppearance.Positional.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_title_height"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/bottom_sheet_padding_horizontal"
        android:paddingEnd="@dimen/bottom_sheet_padding_horizontal"
        android:text="@string/location_copy_coordinates_title" />

    <TextView
        android:id="@+id/coordinatesCopyBothTextView"
        style="@style/TextAppearance.Positional.Body2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_list_item_height"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/bottom_sheet_padding_horizontal"
        android:paddingEnd="@dimen/bottom_sheet_padding_horizontal"
        android:text="@string/location_copy_coordinates_both" />

    <TextView
        android:id="@+id/coordinatesCopyLatitudeTextView"
        style="@style/TextAppearance.Positional.Body2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_list_item_height"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/bottom_sheet_padding_horizontal"
        android:paddingEnd="@dimen/bottom_sheet_padding_horizontal"
        android:text="@string/location_copy_coordinates_latitude" />

    <TextView
        android:id="@+id/coordinatesCopyLongitudeTextView"
        style="@style/TextAppearance.Positional.Body2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_list_item_height"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/bottom_sheet_padding_horizontal"
        android:paddingEnd="@dimen/bottom_sheet_padding_horizontal"
        android:text="@string/location_copy_coordinates_longitude" />

</LinearLayout>