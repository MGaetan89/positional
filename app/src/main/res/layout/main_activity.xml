<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="18dp">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"/>

    <!-- Coordinates -->
    <LinearLayout
        android:id="@+id/coordinates_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coordinates_latitude_value_text_view"
            style="@style/TopValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            tools:text="+100.00000"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:contentDescription="@string/coordinates"
            android:src="@drawable/ic_my_location_black_24dp"
            android:tint="@color/darkGray"/>

        <TextView
            android:id="@+id/coordinates_longitude_value_text_view"
            style="@style/TopValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            tools:text="+100.00000"/>

    </LinearLayout>

    <!-- First row -->
    <LinearLayout
        style="@style/StatRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- Elevation -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/StatImageView"
                android:contentDescription="@string/elevation"
                android:src="@drawable/ic_terrain_black_24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/elevation_value_text_view"
                    style="@style/GridValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10000"/>

                <TextView
                    android:id="@+id/elevation_unit_text_view"
                    style="@style/SmallUnitTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ft"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Speed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/StatImageView"
                android:contentDescription="@string/speed"
                android:src="@drawable/speedometer"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/speed_value_text_view"
                    style="@style/GridValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="100"/>

                <TextView
                    android:id="@+id/speed_unit_text_view"
                    style="@style/SmallUnitTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="mph"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Second row -->
    <LinearLayout
        style="@style/StatRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- Bearing -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/StatImageView"
                android:contentDescription="@string/bearing"
                android:src="@drawable/ic_explore_black_24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bearing_value_text_view"
                    style="@style/GridValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    tools:text="359"/>

                <TextView
                    android:id="@+id/bearing_unit_text_view"
                    style="@style/GridValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_degrees"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Accuracy -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/StatImageView"
                android:contentDescription="@string/accuracy"
                android:src="@drawable/bullseye"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accuracy_value_text_view"
                    style="@style/GridValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10"/>

                <TextView
                    android:id="@+id/accuracy_unit_text_view"
                    style="@style/SmallUnitTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ft"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Third row -->
    <LinearLayout
        style="@style/StatRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- Satellites -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/StatImageView"
                android:contentDescription="@string/satellites"
                android:src="@drawable/satellite_variant"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/satellites_value_text_view"
                    style="@style/GridValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10"/>

                <TextView
                    android:id="@+id/satellites_unit_text_view"
                    style="@style/SmallUnitTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sats"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Provider Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/StatImageView"
                android:contentDescription="@string/provider_status"
                android:src="@drawable/pulse"/>

            <TextView
                android:id="@+id/provider_status_value_text_view"
                style="@style/GridValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                tools:text="GPS"/>

        </LinearLayout>

    </LinearLayout>

    <Switch
        android:id="@+id/screen_lock_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:switchPadding="12dp"
        android:text="@string/settings_screen_lock_label"/>

</LinearLayout>