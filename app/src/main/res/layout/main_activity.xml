<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainActivityLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/navigationBarBackground"
        android:elevation="24dp"
        app:itemBackground="@color/navigationBarItemBackground"
        app:itemIconTint="@color/navigationBarIconTint"
        app:itemTextColor="@color/navigationBarTextColor"
        app:menu="@menu/main_bottom_navigation"
        tools:targetApi="lollipop"/>

    <io.trewartha.positional.UndraggableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        android:layout_alignParentTop="true"
        android:elevation="0dp"
        tools:targetApi="lollipop"/>

</RelativeLayout>