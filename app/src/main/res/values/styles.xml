<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Positional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:textColorSecondary">@color/onSurfaceLightVariant</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="fontFamily">@font/basic</item>
    </style>

    <!-- Bottom Navigation -->

    <style name="BottomNavigationViewStyle">
        <item name="android:background">@color/colorSurface</item>
        <item name="itemIconTint">@color/bottom_navigation_icon_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_text_color</item>
    </style>

    <!-- Compass -->

    <style name="CompassAttributeTitle" parent="TextAppearance.Positional.Subtitle2" />

    <style name="CompassAttributeValue" parent="TextAppearance.Positional.Caption">
        <item name="corners">4</item>
        <item name="custom_color">@color/loaderViewShimmer</item>
        <item name="height_weight">0.8</item>
    </style>

    <style name="CompassBackground">
        <item name="android:tint">@color/colorOnSurface</item>
    </style>

    <style name="CompassDegrees" parent="TextAppearance.Positional.Headline5">
        <item name="autoSizeMaxTextSize">128sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="corners">4</item>
        <item name="custom_color">@color/loaderViewShimmer</item>
        <item name="height_weight">0.8</item>
    </style>

    <!-- Location -->

    <style name="LocationCoordinates">
        <item name="corners">4</item>
        <item name="custom_color">@color/loaderViewShimmer</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="height_weight">0.8</item>
    </style>

    <style name="LocationCoordinatesFragment">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">32dp</item>
    </style>

    <style name="LocationStatIcon">
        <item name="android:tintMode">src_in</item>
        <item name="android:tint">@color/colorOnSurface</item>
    </style>

    <style name="LocationStatLabel" parent="@style/TextAppearance.Positional.Headline6">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LocationStat" parent="TextAppearance.Positional.Headline6">
        <item name="android:textIsSelectable">true</item>
        <item name="corners">4</item>
        <item name="custom_color">@color/loaderViewShimmer</item>
        <item name="height_weight">0.8</item>
    </style>

    <style name="LocationStatRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">.2</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
    </style>

    <style name="LocationStatRowLandscape" parent="LocationStatRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LocationUpdatedAt" parent="TextAppearance.Positional.Body2">
        <item name="corners">4</item>
        <item name="custom_color">@color/loaderViewShimmer</item>
        <item name="height_weight">0.8</item>
    </style>

    <!-- Sun -->

    <style name="SunStatLabel" parent="@style/TextAppearance.Positional.Headline6">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SunDate" parent="TextAppearance.Positional.Caption">
        <item name="corners">4</item>
        <item name="custom_color">@color/loaderViewShimmer</item>
        <item name="android:gravity">end</item>
        <item name="height_weight">0.8</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="SunStat" parent="TextAppearance.Positional.Headline6">
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">end</item>
        <item name="corners">4</item>
        <item name="custom_color">@color/loaderViewShimmer</item>
        <item name="height_weight">0.8</item>
        <item name="android:minWidth">96dp</item>
    </style>

    <!-- Text Appearance -->

    <style name="TextAppearance.Positional.Caption" parent="@style/TextAppearance.MaterialComponents.Caption" />

    <style name="TextAppearance.Positional.Headline1" parent="@style/TextAppearance.MaterialComponents.Headline1" />

    <style name="TextAppearance.Positional.Headline2" parent="@style/TextAppearance.MaterialComponents.Headline2" />

    <style name="TextAppearance.Positional.Headline3" parent="@style/TextAppearance.MaterialComponents.Headline3" />

    <style name="TextAppearance.Positional.Headline4" parent="@style/TextAppearance.MaterialComponents.Headline4" />

    <style name="TextAppearance.Positional.Headline5" parent="@style/TextAppearance.MaterialComponents.Headline5" />

    <style name="TextAppearance.Positional.Headline6" parent="@style/TextAppearance.MaterialComponents.Headline6" />

    <style name="TextAppearance.Positional.Overline" parent="@style/TextAppearance.MaterialComponents.Overline" />

    <style name="TextAppearance.Positional.Subtitle1" parent="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <style name="TextAppearance.Positional.Subtitle2" parent="@style/TextAppearance.MaterialComponents.Subtitle2" />

    <style name="TextAppearance.Positional.Body1" parent="@style/TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.Positional.Body2" parent="@style/TextAppearance.MaterialComponents.Body2" />

</resources>
