<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Bottom Sheets -->

    <style name="BottomSheetTitle">
        <item name="android:gravity">center_vertical|left|start</item>
        <item name="android:layout_height">@dimen/bottom_sheet_title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:textColor">@color/bottomSheetTitle</item>
        <item name="android:textSize">@dimen/bottom_sheet_title_text_size</item>
    </style>

    <style name="BottomSheetListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical|left|start</item>
        <item name="android:layout_height">@dimen/bottom_sheet_list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/bottom_sheet_padding_horizontal</item>
        <item name="android:textColor">@color/bottomSheetListItem</item>
        <item name="android:textSize">@dimen/bottom_sheet_list_item_text_size</item>
    </style>

    <!-- Compass -->

    <style name="CompassAttributeTitle">
        <item name="android:textColor">@color/compassAttributeTitleColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CompassAttributeValue">
        <item name="android:textColor">@color/compassAttributeValueColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CompassBackground">
        <item name="android:tint">@color/compassBackground</item>
    </style>

    <style name="CompassDegrees">
        <item name="android:textColor">@color/compassDegrees</item>
    </style>

    <style name="CompassPin">
        <item name="android:tint">@color/compassPin</item>
    </style>

    <!-- Coordinates -->

    <style name="Coordinates">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:ellipsize">none</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/positionStatTextColor</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="CoordinatesFragment">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="CoordinatesFormatLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/positionStatTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Position Stats -->

    <style name="PositionStatIcon">
        <item name="android:layout_height">@dimen/stat_image_size</item>
        <item name="android:layout_width">@dimen/stat_image_size</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:tint">@color/positionStatIconTint</item>
        <item name="android:tintMode" tools:ignore="NewApi">src_in</item>
    </style>

    <style name="PositionStatIconLarge" parent="PositionStatIcon">
        <item name="android:layout_height">@dimen/stat_image_size_large</item>
        <item name="android:layout_width">@dimen/stat_image_size_large</item>
    </style>

    <style name="PositionStatIconLandscape" parent="PositionStatIcon">
        <item name="android:layout_height">@dimen/stat_image_size_landscape</item>
        <item name="android:layout_width">@dimen/stat_image_size_landscape</item>
    </style>

    <style name="PositionStatIconLargeLandscape" parent="PositionStatIconLandscape">
        <item name="android:layout_height">@dimen/stat_image_size_large_landscape</item>
        <item name="android:layout_width">@dimen/stat_image_size_large_landscape</item>
    </style>

    <style name="PositionStatLabel">
        <item name="android:textColor">@color/positionStatTextColor</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="PositionStatLabelLandscape" parent="PositionStatLabel">
        <item name="android:textSize">@dimen/label_text_size_landscape</item>
    </style>

    <style name="PositionStatLabelLarge" parent="PositionStatLabel">
        <item name="android:textSize">@dimen/label_text_size_large</item>
    </style>

    <style name="PositionStatLabelLargeLandscape" parent="PositionStatLabelLandscape">
        <item name="android:textSize">@dimen/label_text_size_large_landscape</item>
    </style>

    <style name="PositionStatRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">.2</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">@dimen/activity_horizontal_margin
        </item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/activity_horizontal_margin
        </item>
    </style>

    <style name="PositionStatRowLandscape" parent="PositionStatRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">20dp</item>
    </style>

    <style name="PositionStatRowLarge" parent="PositionStatRow">
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="PositionStatRowLargeLandscape" parent="PositionStatRowLandscape">
    </style>

    <style name="PositionStatUnit">
        <item name="android:textColor">@color/positionStatTextColor</item>
        <item name="android:textSize">@dimen/unit_text_size</item>
    </style>

    <style name="PositionStatUnitLandscape" parent="PositionStatUnit">
        <item name="android:textSize">@dimen/unit_text_size_landscape</item>
    </style>

    <style name="PositionStatUnitLarge" parent="PositionStatUnit">
        <item name="android:textSize">@dimen/unit_text_size_large</item>
    </style>

    <style name="PositionStatUnitLargeLandscape" parent="PositionStatUnitLandscape">
        <item name="android:textSize">@dimen/unit_text_size_large_landscape</item>
    </style>

    <style name="PositionStatValue">
        <item name="android:gravity">end|right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/positionStatTextColor</item>
        <item name="android:textSize">@dimen/value_text_size</item>
    </style>

    <style name="PositionStatValueLandscape" parent="PositionStatValue">
        <item name="android:textSize">@dimen/value_text_size_landscape</item>
    </style>

    <style name="PositionStatValueLarge" parent="PositionStatValue">
        <item name="android:textSize">@dimen/value_text_size_large</item>
    </style>

    <style name="PositionStatValueLargeLandscape" parent="PositionStatValueLandscape">
        <item name="android:textSize">@dimen/value_text_size_large_landscape</item>
    </style>

</resources>
