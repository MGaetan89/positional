<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Colors -->
    <!-- NOTE: ONLY OTHER COLORS SHOULD REFER TO THESE -->
    <color name="black">#000000</color>
    <color name="blue">#00a9e7</color>
    <color name="gray1">#333333</color>
    <color name="gray2">#666666</color>
    <color name="gray3">#AAAAAA</color>
    <color name="gray4">#EEEEEE</color>
    <color name="white">#FFFFFF</color>

    <!-- Material Theme Colors -->
    <color name="colorAccent">@color/blue</color>
    <color name="colorPrimary">@color/gray1</color>
    <color name="colorPrimaryDark">@color/black</color>

    <!-- Bottom Sheets -->
    <color name="bottomSheetListItem">#DE000000</color>
    <color name="bottomSheetTitle">#8A000000</color>

    <!-- Compass -->
    <color name="compassAttributeTitleColor">@color/gray1</color>
    <color name="compassAttributeValueColor">@color/gray1</color>
    <color name="compassBackground">@color/gray1</color>
    <color name="compassDegrees">@color/gray1</color>

    <!-- Navigation Bar -->
    <color name="navigationBarBackground">@color/white</color>
    <color name="navigationBarIconTint">@color/gray1</color>
    <color name="navigationBarItemBackground">@color/white</color>
    <color name="navigationBarTextColor">@color/gray1</color>

    <!-- Position Stats -->
    <color name="positionStatDivider">@color/gray4</color>
    <color name="positionStatTextColor">@color/gray1</color>
    <color name="positionStatIconTint">@color/gray1</color>

    <!-- Screen Lock -->
    <color name="screenLockButtonTint">@color/positionStatIconTint</color>

    <!-- View Pagers -->
    <color name="viewPagerTabDotSelected">@color/gray2</color>
    <color name="viewPagerTabDotUnselected">@color/gray3</color>

</resources>
